{
  "compilerOptions": {
    "outDir": "./dist/",
    "target": "ESNext",
    "module": "commonjs",
    "strict": true,
    "sourceMap": true,
    "allowJs": false,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "declaration": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
